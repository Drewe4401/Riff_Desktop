{
  "name": "Riff",
  "version": "1.1.1",
  "description": "Desktop Music player that downloads music locally.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "tailwindcss -i ./src/renderer/styles/input.css -o ./src/renderer/styles/index.css",
    "watch:css": "tailwindcss -i ./src/renderer/styles/input.css -o ./src/renderer/styles/index.css --watch",
    "dist": "npm run build:css && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "publish": "electron-forge publish"
  },
  "build": {
    "appId": "com.Riff.app",
    "productName": "Riff",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "files": [
      "**/*",
      "!**/.vscode/*",
      "!src/renderer/styles/input.css"
    ],
    "extraResources": [
      {
        "from": "FFMPEG",
        "to": "FFMPEG",
        "filter": [
          "**/*"
        ]
      },
      ".env"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Drewe4401/Riff.git"
  },
  "keywords": [
    "MP3",
    "Music",
    "Free"
  ],
  "author": "Drewe4401",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Drewe4401/Riff/issues"
  },
  "homepage": "https://github.com/Drewe4401/Riff#readme",
  "devDependencies": {
    "@electron-forge/publisher-github": "^7.10.2",
    "autoprefixer": "^10.4.23",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}